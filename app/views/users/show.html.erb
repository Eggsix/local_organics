<div id='user_profile'>
	<h1>Hello, <%= current_user.name %></h1>
	<form action='/users/update/<%= current_user.id %>' method='post'>
		<input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
		<p>Current Email
		<input type='text' name='email' placeholder='<%= @user.email %>'></p>
		Interests
		<textarea id='user_interests' name='interests' placeholder='<%= @user.interest %>' cols='30' rows='5'></textarea>
		<p><button>Submit Changes</button><p>
		<input type='hidden' name='_method' value='patch'>
	</form>
</div>